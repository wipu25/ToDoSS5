<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_tea"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">
    
    <TextView
        android:id="@+id/titleHeader"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/titleEdit"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleHeader"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:hint="Title"
            android:inputType="textCapSentences"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/descriptionHeader"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleEdit"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/descriptionEdit"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionEdit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/quantityTitle"
        app:layout_constraintTop_toBottomOf="@id/descriptionHeader">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12dp"
        android:hint="Description (Optional)"
        android:inputType="textCapSentences"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/quantityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginVertical="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Quantity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionEdit"
        app:layout_constraintBottom_toTopOf="@id/quantitySeekbar"
        />

    <SeekBar
        android:id="@+id/quantitySeekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quantityTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/quantityValue"
        app:layout_constraintBottom_toTopOf="@id/priorityTitle"
        android:min="1"
        android:max="10"
        android:progress="5"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/blue_steel"
        android:thumbTint="@color/blue_steel"/>

    <TextView
        android:text="5"
        android:padding="4dp"
        android:textSize="12sp"
        android:id="@+id/quantityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/quantitySeekbar"
        app:layout_constraintTop_toBottomOf="@id/quantityTitle"
        app:layout_constraintBottom_toTopOf="@id/priorityTitle"
        />

    <TextView
        android:id="@+id/priorityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginVertical="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Priority"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantitySeekbar"
        app:layout_constraintBottom_toTopOf="@id/radioGroup"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priorityTitle"
        app:layout_constraintBottom_toTopOf="@id/categoryTitle">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Low"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"/>
    </RadioGroup>

    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginVertical="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintBottom_toTopOf="@id/categoryList"
        />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:itemSpacing="8dp"
        app:layout_constraintTop_toBottomOf="@id/categoryTitle"
        app:layout_constraintBottom_toTopOf="@id/saveButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="2"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_marginTop="16dp"
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryList"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>